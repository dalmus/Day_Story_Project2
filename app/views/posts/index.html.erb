

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Story told by: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %> -- </td>
        <td><%= post.user.name %> </td>
        <td><%= link_to "Read Story", post_path(post) %></td>
        <td><%= link_to "| Delete this Story!", post, method: :delete, data: {confirm: "Are you sure you want to delete this Story?"} if post.user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Story", new_post_path %>
