<h1>Editing Story of the Day</h1>



<%= form_for @post do |f| %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>

    <%= f.submit "Submit these changes!", class: "botton letter_color" %>

<% end %>

<%= link_to "Back to the list!", posts_path, class: "botton letter_color" %>
