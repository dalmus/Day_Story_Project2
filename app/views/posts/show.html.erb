<div class="opacity padding-text">
<p><h1>
   <%= @post.title %>
</h1></p>

<p><h4>
   <%= @post.content %>
</h4></p>

<p><h4>
  <strong>Author:</strong>
  <%= @post.user.name %>
</h4></p>

<%= render 'comments/comment' %>

<%#= link_to "Back to the Stories!", posts_path %>
<%= link_to "| Delete this Story!", post_path, method: :delete, data: {confirm: "Are you sure you want to delete this Story?"} if @post.user == current_user %>
<%= link_to "| Edit this Story", edit_post_path(@post) if @post.user == current_user %>
</div>
