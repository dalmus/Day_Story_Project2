<!DOCTYPE html>
<html>
  <head>
    <title>StoryOfTheDay</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'partials/nav' %>
    <div class="container"


    <%# ----- add these lines here: ----- %>

    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Welcome #{current_user.name}" %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <!-- not logged in -->
     <%= link_to 'Log In', login_path %>
    <% end %>
    <hr>

    <%# ----- add these lines here: ----- %>

   <% if notice %>
     <%= notice %>
   <% end %>

   <% if alert %>
     <%= alert %>
   <% end %>
<h1>Story of the Day</h1>
   <%# ----- end of added lines ----- %>
    <%= yield %>
    </div>
  </body>
</html>
