<div class="opacity padding-text">
<h1>Profile Stories</h1>

<% @posts.each do |post| %>
<hr>
<h3><strong><%= post.title %></strong><h4><br>
<%= post.content %>
<%= link_to "Check comments", post_path(post) %>
<%= link_to "| Delete this Story", post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this Story?"} if post.user == current_user %>
<%= link_to "| Edit this Story", edit_post_path(post) if post.user == current_user %>
<br>
<br>



<% end %>
</div>
